{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "plan": {
        "buildPhase": "npm run build",
        "startPhase": "npm start",
        "installPhase": "npm install"
      }
    }
  },
  "deploy": {
    "startCommand": "npm run build && npm start",
    "restartPolicy": "always"
  }
}
